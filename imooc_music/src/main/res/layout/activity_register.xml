<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.RegisterActivity">

    <include layout="@layout/nav_bar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginSize"
        android:src="@drawable/logo"

        />

    <com.bluetooth.imooc_music.views.InputView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_hint="请输入手机号"
        app:input_icon="@drawable/phone"
        android:id="@+id/input_phone"
        app:is_password="false">

    </com.bluetooth.imooc_music.views.InputView>

    <View style="@style/line" />


    <com.bluetooth.imooc_music.views.InputView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_hint="请输入密码"
        app:input_icon="@drawable/password"
        android:id="@+id/input_password"
        app:is_password="true">

    </com.bluetooth.imooc_music.views.InputView>

    <View style="@style/line" />


    <com.bluetooth.imooc_music.views.InputView
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputViewHeight"
        app:input_hint="请确认密码"
        app:input_icon="@drawable/password"
        android:id="@+id/input_password_confirm"
        app:is_password="true">

    </com.bluetooth.imooc_music.views.InputView>

    <View style="@style/line" />


    <Button
        style="@style/commitBtn"
        android:text="注   册"
        android:layout_marginTop="@dimen/marginSize"
        android:onClick="onResiterClick"
        />


</LinearLayout>